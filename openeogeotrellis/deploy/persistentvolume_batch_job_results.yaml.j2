---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ job_name }}
spec:
  storageClassName: csi-s3
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  claimRef:
    namespace: {{ job_namespace }}
    name: {{ job_name }}
  csi:
    driver: ru.yandex.s3.csi
    controllerPublishSecretRef:
      name: csi-s3-secret
      namespace: csi-s3
    nodePublishSecretRef:
      name: csi-s3-secret
      namespace: csi-s3
    nodeStageSecretRef:
      name: csi-s3-secret
      namespace: csi-s3
    volumeAttributes:
      capacity: 10Gi
      mounter: s3fs
      options: "-o uid=18585 -o gid=18585 -o allow_other -o use_path_request_style"
    volumeHandle: {{ swift_bucket }}{{output_dir}}
